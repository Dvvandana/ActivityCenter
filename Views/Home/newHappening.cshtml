@model Happening

<div class="container">
    <h1>Create an Activity</h1>
    <form asp-action="NewActivity" asp-controller="Home" method="post">
            <div class="form-group">
                <span asp-validation-for="Title"></span>
                <label asp-for="Title"></label>
                <input type="text" asp-for="Title"/>
            </div>
            <div class="form-group">
                <span asp-validation-for="HappeningDate"></span>
                <label asp-for="HappeningDate"></label>
                <input type="Date" asp-for="HappeningDate"/>
            </div>
            <div class="form-group">
                <span asp-validation-for="StartTime"></span>
                <label asp-for="StartTime"></label>
                <input type="time" asp-for="StartTime"/>
            </div>
            <div class="form-group">
                <span asp-validation-for="Duration"></span>
                <label asp-for="Duration"></label>
                <input type="number" asp-for="Duration"/>
            </div>
            <div class="form-group">
                <span asp-validation-for="DurationMetric"></span>
                <select asp-for="DurationMetric">
                    <option value="Days">Days</option>
                    <option value="Hours">Hours</option>
                    <option value="Minutes">Minutes</option>
                </select>
            </div>
            <div class="form-group">
                <span asp-validation-for="Description"></span>
                <label asp-for="Description"></label>
                <textarea asp-for="Description"></textarea>
            </div>
            <input type="submit" value="Create An Activity"/>
    </form>
</div>